<Window x:Class="HRIS.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:HRIS.View"
        mc:Ignorable="d"
        Title="Human Resources Information System" Height="500" Width="800">

	<TabControl Margin="0, 0, 0, 10">
		<TabItem Name="StaffTab" Header="Staff">
			<TabItem.Content>
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<view:StaffTab />
				</ScrollViewer>
			</TabItem.Content>
		</TabItem>

		<TabItem Name="UnitsTab" Header="Units">
			<TabItem.Content>
				<view:UnitTab />
			</TabItem.Content>
		</TabItem>

		<TabItem Name="HeatMapsTab" Header="Heat Maps">
			<TabItem.Content>
				<view:HeatMapTab />
			</TabItem.Content>
		</TabItem>
	</TabControl>
</Window>

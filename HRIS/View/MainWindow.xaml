<Window x:Class="HRIS.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:HRIS.View"
        mc:Ignorable="d"
        Title="Human Resources Information System" Height="500" Width="800">

	<TabControl Margin="0, 0, 0, 10" x:Name="Navigation">
		<TabItem x:Name="StaffTabItem" Header="Staff">
			<TabItem.Content>
				<view:StaffTab x:Name="StaffTabContent" />
			</TabItem.Content>
		</TabItem>

		<TabItem x:Name="UnitsTabItem" Header="Units">
			<TabItem.Content>
				<view:UnitTab x:Name="UnitTabContent" />
			</TabItem.Content>
		</TabItem>

		<TabItem x:Name="HeatMapsTabItem" Header="Heat Maps">
			<TabItem.Content>
				<view:HeatMapTab x:Name="HeatMapsTabContent" />
			</TabItem.Content>
		</TabItem>
	</TabControl>
</Window>

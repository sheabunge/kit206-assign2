<Window x:Class="HRIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Human Resources Information System" Height="350" Width="525">

	<TabControl Margin="0, 0, 0, 10">
		<TabItem Name="StaffTab" Header="Staff">
			<TabItem.Content>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="103*" />
						<ColumnDefinition Width="43*" />
						<ColumnDefinition Width="365*" />
					</Grid.ColumnDefinitions>
					<ListBox x:Name="StaffListBox" ItemsSource="{Binding Source={StaticResource StaffList}}" HorizontalAlignment="Left" Width="148" Grid.ColumnSpan="3" />
					<ComboBox Grid.Column="2" HorizontalAlignment="Left" Margin="123,115,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Source={StaticResource CategoryValues}}" SelectedIndex="0" SelectionChanged="SelectCategory" />
				</Grid>
			</TabItem.Content>
		</TabItem>

		<TabItem Name="UnitsTab" Header="Units">
			<TabItem.Content>
				<TextBlock>Tab content</TextBlock>
			</TabItem.Content>
		</TabItem>

		<TabItem Name="HeatMapsTab" Header="Heat Maps">
			<TabItem.Content>
				<TextBlock>Tab content</TextBlock>
			</TabItem.Content>
		</TabItem>
	</TabControl>
</Window>
